{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "assets/**/*",
        "outDir": "./dist/assets/"
      }
    ],
    "deleteOutDir": true,
    "watchAssets": true
  }
}
